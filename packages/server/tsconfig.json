{
  "extends": "../../tsconfig.json",
  "include": [
    "./src/**/*",
    "src/database/**/*"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "strict": true,
    "noEmit": false,
    "target": "es5",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false

  },
}