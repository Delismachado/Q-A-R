{
  "extends": "../../tsconfig.json",
  "include": [
    "./src/**/*", "ormconfig.js"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "strict": true,
    "noEmit": false,
    "target": "es5",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["shared/config/*"]
    },
  },
}